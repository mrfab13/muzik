}

.the-box {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100vh;
    padding: 20px;
    box-sizing: border-box;
}

.the-input{
  width: 90%;
  height: 10vh;
  font-size: 8vh;
  background-color: #1c1c1c;
  color: white;
  border: 1px solid white;
}


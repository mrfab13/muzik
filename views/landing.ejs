<body>
    <div class="the-box">
    <form action="/" method="POST">
      <%# STAGE 2, This is the password entry %>
      <% if (username) { %>
        <input class="the-input" type="hidden" name="username" value="<%=username%>">
        <input class="the-input" type="password" name="password">
      <% } else { %>
        <input class="the-input" type="text" name="username"> 
        <input class="the-input" type="hidden" name="password" value="">
      <% }%>
    </form>
    </div>

